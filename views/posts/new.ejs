<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">New Post</h1>
        <div class="col-6 offset-3">
            <form action="/posts" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <!--enctype is for different encoding, help with images -->
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="post[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="post[location]" required>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="post[image]" required>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Post Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="post[price]" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="post[description]"
                        required></textarea>
                </div>

                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Add image(s)...</label>
                    <input class="form-control" type="file" id="formFileMultiple" multiple name="image">
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Add post</button>
                </div>
            </form>
            <a href="/posts">All Posts</a>
        </div>
    </div>