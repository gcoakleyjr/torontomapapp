<% layout("layouts/mapBoilerplate") %>

    

    <main>

        <div id="show-page-wrapper">
            <div class="top-page-padding"></div>
            <div id="cluster-map" ></div>
        </div>

        <div class="container mt-5">
            <%- include("../partials/flash") %>
            
            <h1>All Posts</h1>
            <div>
                <a href="/posts/new">Add Post</a>
            </div>
            <% for (let post of posts){%>
                <div class="card mb-3" >
                    <div class="row">
                        <% if(post.images.length) {%>
                            <div class="col-md-4">
                                <img class="img-fluid" alt="" src="<%=post.images[0].url%>">
                            </div>
                            <% } %>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title mb-0">
                                            <%= post.title %>
                                        </h5>
                                        <p class="card-text text-muted fs-6">Posted by <a class="link-secondary" href="#">
                                                <%=post.author.username%>
                                            </a></p>
                                        <p class="card-text">
                                            <%= post.description %>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <%= post.location%>
                                            </small>
                                        </p>
                                        <a class="btn btn-primary" href="/posts/<%=post._id%>">View
                                            <%=post.title%>
                                        </a>
                                    </div>
                                </div>
                    </div>
                </div>
                <% }%>
        </div>
    </main>

            <script>
                posts = {features: <%- JSON.stringify(posts) %>}
            </script>
            <script src="/javascript/indexPageMap.js"></script>